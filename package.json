{
  "name": "live2d-viewer",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0",
    "build": "vite build && node scripts/copy-assets.js",
    "preview": "vite preview"
  },
  "dependencies": {
    "@ant-design/icons-vue": "^6.0.0",
    "@element-plus/icons-vue": "^2.3.1",
    "ant-design-vue": "^4.2.6",
    "ant-design-x-vue": "^1.2.0",
    "axios": "^1.7.7",
    "element-plus": "^2.9.3",
    "fetch-sse": "^1.1.0",
    "json-editor-vue": "^0.18.1",
    "markdown-it": "^13.0.1",
    "pixi-live2d-display": "^0.4.0",
    "pixi.js": "^6.5.1",
    "uuid": "^10.0.0",
    "vue": "^3.3.4",
    "vue-router": "^4.2.0",
    "vue3-colorpicker": "^2.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/runtime-core": "^3.3.4",
    "@vue/tsconfig": "^0.4.0",
    "typescript": "~5.0.4",
    "vite": "^4.3.9",
    "vue-tsc": "^2.2.0"
  },
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}
